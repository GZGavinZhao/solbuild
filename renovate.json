{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "schedule:monthly"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "golang",
      "labels": ["lang: go", "area: dependencies"],
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
